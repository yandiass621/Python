qtdNotas = int(input("Insira a Quantidade de Notas Que Vai Declarar: "))

notas = []

for i in range(qtdNotas):
    nota = float(input(f"Digite a {i + 1}º nota : "))
    notas.append(nota)


print("")
print(f"Notas inseridas: {notas}")


def calculo_de_media (notas):
  media = sum(notas)/len(notas)
  return media

media = calculo_de_media(notas)

if media >= 7:
    print("")
    print(f"Sua nota foi :{media}")
    print("Você foi Aprovado!")

else:
    print("")
    print(f"A Média das Suas Notas Foram: {media}")
    print("Você foi Reprovado!")
